{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es2019"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "jsx": "react"
    },
    "include": ["./src/**/*"]
}